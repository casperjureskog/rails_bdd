<h2>Article</h2>

<h4><%= @articles.title %></h4>

<%= @articles.content %>
<h3>Write comment</h3>
 <% if flash[:alert] %>
     <div class="alert"><%= flash[:alert] %></div>
 <% end %>

<%= form_for ([ @articles, @comments ]) do |f| %>
    <div>
       <%= f.label :email %>
       <%= f.text_field :email %>
    </div>
    <div>
       <%= f.label :comment %>
       <%= f.text_area :comment %>
    </div>
    <div>
       <%= f.submit "comment" %>
    </div>
<% end %>
<h3><%= link_to "Home", root_path%></h3>
<% if @articles.comments %>
    <h3>Comments</h3>
  <% @articles.comments.each do |content| %>
      <ul>
        <li><%= content.email %></li>
        <li><%= content.comment %></li>
      </ul>
  <% end %>
<% end %>
