<h1>New Article</h1>

<%= form_for(@articles) do |f| %>
      <div>
        <%= f.label :author %>
        <%= f.text_field :author %>
      </div>

      <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div>
        <%= f.label :content %>
        <%= f.text_area :content %>
      </div>

      <div>
        <%= f.submit "add" %>
      </div>
 <% end %>
<h3><%= link_to "Home", root_path%></h3>
