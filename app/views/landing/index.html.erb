<h2>Articles</h2>
<ul>
  <% @articles.each do |article| %>
      <li>
      <h3><%= link_to article.title, new_article_comment_path(article)%></h3>
      <li>
        <%= article.content %><br />
      </li>
      <li>
      Written by <%= article.author  %> at <%= article.created_at.strftime('%Y-%m-%d') %><br />
      </li>
      </li>
  <% end %>
</ul>
